{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["es6", "esnext", "dom"],
    "strict": true,
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "src/__tests__/*", "tsconfig.json"]
}
